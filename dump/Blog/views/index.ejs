<% include ./partials/header %>
<div class="ui main text container">
	<div class="ui huge header">My Blog</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(blog){ %>
			<div class="item">
				<div class="image">
					<img src="<%=blog.image%>" alt="<%=blog.image%>">
				</div>
				<div class="content">
					<div class="header">
						<a href="/blogs/<%=blog._id%>" class="title"><%=blog.title%></a>
					</div>
					<div class="meta">
						<span><%= blog.created.toDateString()%></span>
					</div>
					<div class="description">
						<p><%- blog.body.substring(0,100)%>...</p>
					</div>
					<div class="extra">
						<a href="/blogs/<%=blog._id%>" class="ui floated blue basic button">Read More<i class="right chevron icon"></i></a>
					</div>
				</div>
    		</div>
    		<%})%>
		</div>
	</div>
</div>


<% include ./partials/footer %>