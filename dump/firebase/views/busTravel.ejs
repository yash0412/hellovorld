<table border="1" width="90%" class="table-bordered table-striped ">
    <tr>
        <th>Date</th>
        <th>Bus No</th>
        <th>Last Location</th>
        <th>Total Distance travelled</th>
    </tr>
<% for(i=0;i<data.length;i++){ %>
    <tr>
        <td><%= String(data[i].date).substr(0,15) %></td>
        <td><%= data[i].busno %></td>
        <td><%= data[i].latitude %>,<%= data[i].longitude %></td>
        <td><%= data[i].distance.toFixed(4); %> KMs</td>
    </tr>
<% } %>

</table>